<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="catBreed"
            type="io.budge.cats.data.model.CatBreed" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.breeddetails.BreedDetailsFragment">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:imageUrl="@{catBreed.image.url}"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
            tools:src="@drawable/ic_pet" />

        <TextView
            android:id="@+id/cat_breed_detail_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@{catBreed.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cat_detail_image"
            tools:text="Alpine Feline" />

        <TextView
            android:id="@+id/cat_breed_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cat_breed_detail_name"
            tools:text="@string/long_text"
            android:layout_marginTop="8dp"
            android:text="@{catBreed.description}"
            style="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_more"
            android:id="@+id/read_more"
            android:textColor="@color/link_blue"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@id/cat_breed_detail_description"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
